<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonMainStyle">@style/MyBlueButton</item>
        <item name="textViewStyle">@style/MyTextView</item>
    </style>

    <style name="AppTheme.Inverse" parent="AppTheme">
        <item name="buttonMainStyle">@style/MyBlueButton</item>
        <item name="textViewStyle">@style/MyTextView</item>
    </style>

    <style name="MyTextView" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyBlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
